<div class="grid grid-rows-layout min-h-screen">
    <header class="p-5 bg-black flex justify-center">
        <hgroup class="cursor-pointer flex gap-5">
            <img src="/popcorn-svgrepo-com.svg" width="50" height="50" alt="logo">
            <h1 class="mx-auto max-w-4xl font-display text-4xl font-medium tracking-tight text-slate-50 sm:text-5xl">MovieMingle</h1>
        </hgroup>
    </header>

    <main>
        <div class="bg-workspace bg-cover">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-16 pb-2 text-center lg:pt-32">
                <h1 class="mx-auto max-w-4xl font-display text-5xl font-medium tracking-tight text-slate-50 sm:text-6xl">
                    Let's start enjoying watching your favorite movies with MovieMingle   
                </h1>
            </div>
            <nav class="flex gap-5 pt-24 pb-56 justify-center">
                {{#each links}}
                <route-link href="{{this.href}}"
                    class="cursor-pointer w-72 text-center h-8 no-underline border-none rounded text-slate-50 text-base font-medium inline-block bg-yellow-600 transition hover:bg-yellow-700 hover:scale-105"
                    label="{{this.label}}"></route-link>
                {{/each}}
                
            </nav>
        </div>
        
    </main>
</div>