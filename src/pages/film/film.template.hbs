<div class="relative">
    <div class="grid grid-rows-layout  w-full">
        <header class="p-5 bg-black flex w-full z-50 fixed shadow-black shadow-xl">
            <div class="flex grow">
                <hgroup class="flex gap-5">
                    <img src="/popcorn-svgrepo-com.svg" width="50" height="50" alt="logo">
                    <route-link label="MovieMingle" href="${props.routes.primary}"
                        class="mx-auto max-w-4xl font-display text-4xl font-medium tracking-tight text-slate-50 sm:text-5xl">
                        MovieMingle</route-link>
                </hgroup>
            </div>

        </header>
        <div class="bg-workspace bg-cover mt-20 pt-2 bg-no-repeat h-screen w-full fixed"></div>
    </div>
    <div class="fixed top-0 left-0 right-0 bottom-0 flex items-center justify-center bg-black/[0.5]">
        <div class="relative p-4 w-full max-w-2xl max-h-full">
            <div class="p-4 md:p-5 space-y-4  overflow-auto">
                {{#if movie}}
                <div class="mt-20 bg-black/50 pr-5 pl-5 pt-5 pb-5 shadow-lg  transition-shadow duration-300 rounded-lg hover:shadow-lg hover:shadow-black  hover:transition">
                    <div class="flex gap-6 mb-10">
                        <div>
                            <img class="flex rounded-lg h-48 object-cover" src="{{movie.img}}" alt="{{this.title}}">
                        </div>
                        <div class=" font-medium tracking-tight text-slate-50">
                            <h3 class="text-2xl font-semibold text-yellow-500 dark:text-white">{{movie.title}}</h3>
                            <div class="text-slate-100/70 text-sm font-medium">
                                <p>Rating: {{movie.rating}}</p>
                                <p>Year: {{movie.year}}</p>
                            </div>
                        </div>
                    </div>
                    <p class="text-slate-100/90 text-sm font-medium">Description: {{movie.description}}</p>
                    <div class="p-4 md:p-5 space-y-4 modal-body max-h-[700px] overflow-auto"></div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>